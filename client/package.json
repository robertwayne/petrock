{
    "name": "@petrock/client",
    "version": "0.1.0",
    "private": true,
    "description": "Leaderboard analytics & game database for RetroMMO.",
    "license": "MIT OR Apache-2.0",
    "author": "Rob Wagner <rob@sombia.com>",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "serve": "vite preview",
        "fmt": "prettier --write **/*.{js,ts,svelte,html,css,cjs,mjs,json} --loglevel warn",
        "lint": "eslint src/**/*.{js,ts,svelte}",
        "lint:fix": "eslint --fix --fix-type problem,suggestion src/**/*.{js,ts,svelte}",
        "tsc": "tsc --noEmit",
        "tsc:watch": "tsc --noEmit --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "check": "npm run lint:fix && npm run tsc && npm run fmt"
    },
    "dependencies": {
        "@tailwindcss/forms": "^0.5.3",
        "@tailwindcss/typography": "^0.5.8",
        "idb-keyval": "6.2.0",
        "svelte": "^3.55.0",
        "svelte-navigator": "^3.2.2"
    },
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "^2.0.2",
        "@typescript-eslint/eslint-plugin": "^5.46.1",
        "@typescript-eslint/parser": "^5.54.0",
        "autoprefixer": "^10.4.13",
        "dotenv": "^16.0.3",
        "eslint": "^8.30.0",
        "eslint-plugin-svelte3": "^4.0.0",
        "happy-dom": "^8.1.0",
        "postcss": "^8.4.20",
        "postcss-load-config": "^4.0.1",
        "prettier": "^2.8.1",
        "prettier-plugin-tailwindcss": "^0.2.1",
        "svelte-language-server": "^0.14.39",
        "svelte-preprocess": "^5.0.0",
        "tailwindcss": "^3.2.4",
        "terser": "^5.16.1",
        "typescript": "^4.9.4",
        "vite": "^4.0.2",
        "vitest": "^0.25.8"
    }
}
